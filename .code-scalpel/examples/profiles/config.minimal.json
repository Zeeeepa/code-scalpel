{
  "version": "3.0.0",
  "profile": "minimal",
  "description": "Minimal governance for budget-constrained teams needing compliance without overhead",
  
  "_design_principles": [
    "Server-side governance = zero agent token overhead",
    "Fail fast: DENY before wasting tokens on bad changes",
    "Security-focused: Only policies that prevent real damage",
    "Audit trail: Compliance evidence without manual documentation"
  ],
  
  "governance": {
    "change_budgeting": {
      "enabled": true,
      "max_lines_per_change": 500,
      "max_files_per_change": 10,
      "max_complexity_delta": 50,
      "require_justification": false,
      "budget_refresh_interval_hours": 24
    },
    
    "blast_radius": {
      "enabled": true,
      "max_affected_functions": 50,
      "max_affected_classes": 15,
      "max_call_graph_depth": 5,
      "warn_on_public_api_changes": true,
      "block_on_critical_paths": true,
      "critical_paths": [],
      "critical_path_max_lines": 100,
      "critical_path_max_complexity_delta": 20
    },
    
    "autonomy_constraints": {
      "max_autonomous_iterations": 20,
      "require_approval_for_breaking_changes": true,
      "require_approval_for_security_changes": true,
      "sandbox_execution_required": false
    },
    
    "audit": {
      "log_all_changes": true,
      "log_rejected_changes": true,
      "retention_days": 30
    }
  },
  
  "policy_evaluation": {
    "enabled": true,
    "policy_file": "dev-governance.minimal.yaml",
    "fail_open": false,
    "cache_policies": true
  },
  
  "_usage_guidance": {
    "ideal_for": [
      "Solo developers with compliance requirements",
      "Contractors delivering client projects",
      "Small teams (2-5 devs) with limited budget",
      "Startups needing audit trail without process overhead"
    ],
    "not_for": [
      "Regulated industries (use 'default' or 'restrictive')",
      "Multi-agent orchestration (use 'default')",
      "Enterprise SOC2/ISO compliance (use 'restrictive')"
    ]
  }
}
